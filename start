# Attemp to Terminate and Remove previous session
if [ ! -d .git ]; then
    git clone https://github.com/FS-Project/FerBotInd -b main tmp_git
    mv tmp_git/.git .
    rm -rf tmp_git
fi

# start
python3 -m ferbot
